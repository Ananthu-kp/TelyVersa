<style>
    
    .error{
        color: red;
    }
   
    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }
    
    .pagination .btn {
        margin: 0 5px;
        padding: 5px 10px;
        background-color: #f0f0f0;
        border: 1px solid #ccc;
        text-decoration: none;
        color: #333;
    }
    
    .pagination .active {
        background-color: #333;
        color: #fff;
    }
    
    .pagination .btn:hover {
