    $.ajax({
        url: '/paymentMethod',
        method: 'post',
        data: {
            order,
            response,
            from: "wallet"
        }, success: (response) => {
            if (response) {
                Swal.fire({
                    title: "Success",
                    text: "Payment has been succeed",
                    icon: "success",

                }).then(function () {
                    location.reload()
                });
            } else {
